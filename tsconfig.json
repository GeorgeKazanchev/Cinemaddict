{
  "compilerOptions": {
    "outDir": "public",
    "module": "ESNext",
    "target": "ES5",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
    ],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
